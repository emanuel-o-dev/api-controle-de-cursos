generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  age   Int?
  createdAt DateTime @default(now())
}

model Course {
  id             Int      @id @default(autoincrement())
  code           String   @unique
  name           String
  description String @default("")  
  hoursTotal     Int
  level          CourseLevel
  type           CourseType
  prerequisites  String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum CourseLevel {
  Básico
  Intermediário
  Avançado
}

enum CourseType {
  Presencial
  EAD
  Híbrido
}